{
  "tokenTypes": [
    {
      "name": "whitespace",
      "regex": "\\s"
    },
    {
      "name": "number",
      "regex": "[0-9]"
    },
    {
      "name": "identifier",
      "regex": "[a-zA-Z_$]"
    },
    {
      "name": "string",
      "regex": "[\"']"
    },
    {
      "name": "single-line-comment",
      "regex": "//"
    }
  ],
  "tokens": {
    "whitespace": {
      "breakOn": "\\S",
      "className": "plain"
    },
    "number": {
      "breakAfter": "(0[box])?((\\.[0-9]+)|([0-9]+(\\.[0-9]*)?))",
      "className": "number"
    },
    "identifier": {
      "breakOn": "[^a-zA-Z_$0-9]",
      "className": "identifier"
    },
    "string": {
      "breakAfter": "([\"'])([^\\\\]|(\\\\.))*?\\1",
      "className": "string"
    },
    "single-line-comment": {
      "breakAfter": "\\n",
      "className": "comment"
    }
  }
}
